                <td>{{ fiche.ligneHorsForfait[0].date|date('d-m-Y') }}</td>
                <td>{{ fiche.ligneHorsForfait[0].libelle }}</td>
                <td>{{ fiche.ligneHorsForfait[0].montant }}</td>
            </tr>
        {% endfor %}
    </table>
