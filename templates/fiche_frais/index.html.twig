{% extends 'base.html.twig' %}

{% block title %}Hello FicheFraisController!{% endblock %}

{% block body %}
<style>
    .example-wrapper { margin: 1em auto; max-width: 800px; width: 95%; font: 18px/1.5 sans-serif; }
    .example-wrapper code { background: #F5F5F5; padding: 2px 6px; }
</style>

    <div class="example-wrapper">
        <h1>Les fiches frais de {{ app.user.nom}} {{ app.user.prenom }}</h1>

        <ul>
            {% for fiche in FicheFrais %}
                <li>Total : {{ fiche.montantValide }}</li>
                <li>nbJustificatif : {{ fiche.nbJustificatif }}</li>
                {% if fiche.etat.id == 1 %}
                    <li>Etat : Saisie cloturée</li>
                {% elseif fiche.etat.id == 2 %}
                    <li>Etat : Fiche créée, saisie en cours</li>
                {% elseif fiche.etat.id == 3 %}
                    <li>Etat : Remboursée</li>
                {% elseif fiche.etat.id == 4 %}
                    <li>Etat : Validée et mise en paiement</li>
                {% endif %}
                <li>date do modification : {{ fiche.dateModif|date('d-m-Y') }}</li>
                <li>Mois : {{ fiche.mois }}</li>
            {% endfor %}
        </ul>
    </div>
    <div class="col">
        <a href="{{ path('app_new_fiche_frais') }}">
            <button class="btn btn-primary">Ajouter</button>
        </a>
    </div>
</div>
{% endblock %}
